# =============================================================================
# Hackathon Todo Evolution - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values for local development
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Server configuration
PORT=8000
HOST=0.0.0.0

# Environment: "development" | "production"
ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# For Neon PostgreSQL (recommended for production):
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/database?sslmode=require

# For local SQLite (development only):
# DATABASE_URL=sqlite:///./todo.db

# -----------------------------------------------------------------------------
# AI Configuration (Phase III - Chatbot)
# -----------------------------------------------------------------------------

# OpenAI API key for AI chatbot functionality
OPENAI_API_KEY=sk-your-api-key-here

# AI model to use: gpt-4o-mini | gpt-4o | gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# AI request timeout in seconds (default: 30.0)
OPENAI_TIMEOUT=30.0

# -----------------------------------------------------------------------------
# Qdrant Vector Database (for chat history semantic search)
# -----------------------------------------------------------------------------

# For Qdrant Cloud:
QDRANT_URL=https://xxx.aws.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=chat_messages

# For local Qdrant (development):
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# -----------------------------------------------------------------------------
# Rate Limiting (Redis-based token bucket algorithm)
# -----------------------------------------------------------------------------

# Redis connection URL for rate limiting
REDIS_URL=redis://localhost:6379

# Max requests per time window (default: 100/60)
# MAX_REQUESTS=100
# TIME_WINDOW=60

# -----------------------------------------------------------------------------
# Authentication (Better Auth - shared secret with frontend)
# -----------------------------------------------------------------------------

# Better Auth secret - MUST match frontend's BETTER_AUTH_SECRET
BETTER_AUTH_SECRET=your-secret-key-change-in-production

# Better Auth database URL
# BETTER_AUTH_DB_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/database

# Better Auth database URL (SQLite for development)
# BETTER_AUTH_DB_URL=file://./better_auth.db

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Frontend URL for CORS (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# Hugging Face Spaces proxy URL (optional, for development/testing)
HF_PROXY_URL=

# -----------------------------------------------------------------------------
# Testing Mode
# -----------------------------------------------------------------------------

# Set to "true" to skip background jobs during testing
TEST_MODE=false

# Set to "true" to bypass rate limiting during testing
TESTING=false
